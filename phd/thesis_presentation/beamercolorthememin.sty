\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% color definition
\definecolor{termithgreen}{HTML}{8CC152}
\definecolor{termithorange}{HTML}{E9573F}
\definecolor{termithblack}{HTML}{000000}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% option declaration
\DeclareOptionBeamer{style}{\def\beamer@min@defcolor{#1}}
\ExecuteOptionsBeamer{style=termith}

\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% themes
\def\beamer@min@termithtext{termith}
\ifx\beamer@min@defcolor\beamer@min@termithtext
  \setbeamercolor*{palette primary}{fg=white, bg=termithgreen}
  \setbeamercolor*{palette secondary}{fg=termithgreen,bg=termithgreen!50}

  \setbeamercolor*{title page header}{fg=termithgreen, bg=white}
  \setbeamercolor*{frametitle}{fg=white, bg=termithgreen}
  \setbeamercolor*{framenumber}{fg=termithgreen, bg=white}

  \setbeamercolor{section in toc}{fg=termithgreen, bg=white}

  \setbeamercolor{block title}{fg=white,bg=termithgreen}
  \setbeamercolor{block body}{fg=termithgreen,bg=termithgreen!15}
  \setbeamercolor{block title alerted}{fg=white,bg=termithorange}
  \setbeamercolor{block body alerted}{fg=termithorange,bg=termithorange!15}
  \setbeamercolor{block title example}{fg=white,bg=termithblack}
  \setbeamercolor{block body example}{fg=termithblack,bg=termithblack!15}

  \setbeamercolor{itemize item}{fg=termithgreen, bg=white}
  \setbeamercolor{itemize subitem}{fg=termithgreen, bg=white}
  \setbeamercolor{itemize subsubitem}{fg=termithgreen, bg=white}
  \setbeamercolor{item projected}{fg=white, bg=termithgreen}
\fi

\mode<all>

