% frame title

\setbeamertemplate{frametitle continuation}{}

\defbeamertemplate*{frametitle}{min}[1][]{
  \nointerlineskip
  \begin{beamercolorbox}[wd=\paperwidth,ht=.82cm]{frametitle}
    \begin{tikzpicture}
      \useasboundingbox (0, 0) rectangle (\the\paperwidth, .82cm);
      \ifx\insertframesubtitle\@empty{
        \node[anchor=west] at (0, .44){
          \begin{beamercolorbox}{frametitle}
            \usebeamerfont{frametitle}\insertframetitle
          \end{beamercolorbox}
        };
      }\else{
        \node[anchor=west] at (0, .44){
          \begin{beamercolorbox}{frametitle}
            \usebeamerfont{frametitle}\insertframetitle\hspace{.25em}\usebeamerfont{frametitlesep}$\rangle$\hspace{.25em}\usebeamerfont{framesubtitle}\insertframesubtitle
          \end{beamercolorbox}
        };
      }\fi
      \fill[white] (-1, -0.1) rectangle (\the\paperwidth, 0.025);
    \end{tikzpicture}
  \end{beamercolorbox}
}

