% frame title

\setbeamertemplate{frametitle continuation}{}

\defbeamertemplate*{frametitle}{min}[1][]{
  \nointerlineskip
  \begin{beamercolorbox}[wd=\paperwidth,ht=.84cm]{frametitle}
    \begin{tikzpicture}
      \useasboundingbox (0, 0) rectangle (\the\paperwidth, .84cm);
      \ifx\insertframesubtitle\@empty{
        \node[anchor=south west] at (0, 0){
          \usebeamerfont{frametitle}\insertframetitle
        };
      }\else{
        \node[anchor=south west] at (0, -.22){
          \usebeamerfont{frametitle}\insertframetitle\hspace{.25em}\usebeamerfont{frametitlesep}$\rangle$\hspace{.25em}\usebeamerfont{framesubtitle}\insertframesubtitle
        };
      }\fi
    \end{tikzpicture}
  \end{beamercolorbox}
}

